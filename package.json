{
  "name": "git-mob",
  "version": "0.0.1",
  "description": "CLI tool for including co-authors in commits.",
  "scripts": {
    "test":
      "cross-env TEST=true GITMOB_MESSAGE_PATH=test-helpers/.gitmessage ava --verbose --serial && npm run js-lint",
    "test:w":
      "cross-env TEST=true GITMOB_MESSAGE_PATH=test-helpers/.gitmessage ava --watch",
    "js-lint": "xo"
  },
  "bin": {
    "git-mob": "bin/mob.js",
    "git-solo": "bin/solo.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:findmypast-oss/git-mob.git"
  },
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "cli",
    "cli-app",
    "git-pair",
    "git-duet",
    "git",
    "github",
    "co-author",
    "pairing",
    "pair programming",
    "mob programming",
    "extreme programming",
    "xp",
    "social coding"
  ],
  "author": "Findmypast",
  "license": "MIT",
  "contributors": [
    {
      "name": "Richard Kotze",
      "email": "rkotze@findmypast.com",
      "url": "https://github.com/rkotze"
    },
    {
      "name": "Dennis Ideler",
      "email": "dideler@findmypast.com",
      "url": "https://github.com/dideler"
    }
  ],
  "dependencies": {
    "common-tags": "^1.7.2",
    "js-yaml": "^3.10.0",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "ava": "*",
    "cross-env": "^5.1.3",
    "eol": "^0.9.1",
    "sinon": "^4.3.0",
    "xo": "*"
  },
  "xo": {
    "space": true,
    "rules": {
      "object-curly-spacing": ["error", "always"],
      "curly": ["error", "multi-line"],
      "comma-dangle": ["error", "only-multiline"],
      "ava/no-skip-test": "off",
      "linebreak-style": "off",
      "operator-linebreak": [
        "error",
        "after",
        {
          "overrides": {
            "?": "ignore",
            ":": "ignore"
          }
        }
      ]
    }
  },
  "ava": {
    "files": ["**/*.spec.js"],
    "source": ["**/*.js"]
  }
}
