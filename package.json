{
  "name": "git-mob",
  "version": "0.0.1",
  "description": "A command-line tool for social coding. Includes co-authors in commits.",
  "main": "index.js",
  "scripts": {
    "test": "ava --verbose && xo",
    "test:w": "ava --watch"
  },
  "bin": {
    "git-mob": "bin/mob.js",
    "git-solo": "bin/solo.js"
  },
  "repository": {
    "type": "git",
    "url": "keybase://team/findmypast/git-mob"
  },
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "cli",
    "cli-app",
    "git-pair",
    "git-duet",
    "git",
    "github",
    "co-author",
    "pairing",
    "pair programming",
    "mob programming",
    "extreme programming",
    "xp",
    "social coding"
  ],
  "author": "Findmypast OSS",
  "license": "MIT",
  "contributors": [
    {
      "name": "Richard Kotze",
      "email": "rkotze@findmypast.com",
      "url": "https://github.com/rkotze"
    },
    {
      "name": "Dennis Ideler",
      "email": "dideler@findmypast.com",
      "url": "https://github.com/dideler"
    }
  ],
  "dependencies": {
    "js-yaml": "^3.10.0",
    "minimist": "^1.2.0",
    "shelljs": "^0.8.1"
  },
  "devDependencies": {
    "ava": "*",
    "xo": "*"
  },
  "xo": {
    "space": true,
    "rules": {
      "object-curly-spacing": ["error", "always"],
      "comma-dangle": ["error", "only-multiline"],
      "ava/no-skip-test": "off"
    }
  },
  "ava": {
    "files": ["**/*.spec.js"],
    "source": ["**/*.js"]
  }
}
